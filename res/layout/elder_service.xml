<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    tools:context="com.sjtu.icarer.WelcomeActivity" >

   
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		>

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_weight="4"
		    android:orientation="vertical"
		    android:background="@drawable/nav3" >

		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:layout_margin="5dp"
		        android:layout_weight="10" >

		        <ImageView
		            android:id="@+id/carer_pic"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent" 
		            android:layout_weight="1"
		            android:src="@drawable/head_blank"/>

		        <TextView
		            android:id="@+id/carer_info"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:layout_weight="1"
		            android:textSize="30sp"
		            android:text="" 
		            android:textColor="@color/black"/>
		    </LinearLayout>

		    <Button
		        android:id="@+id/room_service"
		        android:layout_width="match_parent"
		    	android:layout_height="match_parent"
		    	android:layout_margin="15dp"
		    	android:background="#00000000"
		        android:layout_weight="11"
		        android:textSize="40sp"
		        android:textColor="@color/black"
		        android:text="房间服务"/>
		    <Button
		        android:id="@+id/elder_service"
		        android:layout_width="match_parent"
		    	android:layout_height="match_parent"
		    	android:layout_margin="15dp"
		    	android:layout_weight="11"
		    	android:background="#00000000"
		    	android:textSize="40sp"
		        android:textColor="@color/black"
		        android:text="老人服务"/>
		    <Button
		        android:id="@+id/carer_settings"
		        android:layout_width="match_parent"
		    	android:layout_height="match_parent"
		    	android:layout_margin="15dp"
		    	android:layout_weight="11"
		    	android:background="#00000000"
		    	android:gravity="center"
		    	android:textSize="40sp"
		        android:textColor="@color/black"
		        android:text="设定"/>
		    <TextView 
		        android:id="@+id/room_number"
		        android:layout_width="match_parent"
		    	android:layout_height="match_parent"
		    	android:gravity="center"
		    	android:layout_weight="11"
		    	android:textSize="40sp"
		    	android:textColor="@color/black"
		    	/>
		</LinearLayout>

		<RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    android:orientation="vertical"
		    android:paddingLeft="50dp"
		    android:paddingRight="30dp"
		    android:paddingTop="30dp"
		    android:background="@drawable/bg2" >
		    <ScrollView
		        android:id="@+id/elder_list"
		        android:scrollbars="vertical"
		         android:scrollbarSize="10dp"
		        android:layout_height="230dp"
		        android:layout_margin="10dp"
		        android:layout_width="match_parent"
		        
		        android:orientation="vertical"
		       >
		        
		    </ScrollView>
		    <ScrollView
		        android:id="@+id/elder_service_items"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		     	android:layout_below="@id/elder_list"
		        android:layout_margin="10dp"
		        android:orientation="vertical" >
		        
		    </ScrollView>
		    <LinearLayout
		        android:layout_alignParentBottom="true"
		        android:layout_height="70dp"
		        android:layout_width="match_parent"
		        android:layout_margin="5dp"
		        android:orientation="horizontal"
		        android:background="@drawable/corner"
		        >
		  
		        <Button
		            android:id="@+id/elder_confirm_submit" 
		            android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_margin="5dp"
			        android:textColor="@color/black"
			        android:text="确认提交"
			        android:textSize="30sp"
		        />
		    </LinearLayout>
		    		    
		</RelativeLayout>
	</LinearLayout>
</RelativeLayout>
