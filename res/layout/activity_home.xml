<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    tools:context="com.sjtu.icarer.Homectivity" >

   
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_weight="4"
		    android:orientation="vertical"
		    android:background="@drawable/nav3" >

		    <RelativeLayout
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:layout_margin="5dp"
		        android:layout_weight="10" >

		        <ImageView
		            android:id="@+id/carer_pic"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content" 
		            android:gravity="center"
		            android:layout_marginTop="15dp"
				    android:layout_alignParentLeft="true"
					android:maxHeight="160dp"
					android:maxWidth="120dp"
					android:minHeight="160dp"
					android:minWidth="120dp"
				    android:scaleType="fitStart"
				    android:adjustViewBounds="true"
		            android:src="@drawable/default_carer"
		            android:background="@drawable/border_photo"/>

		        <TextView
		            android:id="@+id/carer_info"
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:paddingLeft="5dp"
		            android:layout_toRightOf="@id/carer_pic"
		            android:textSize="25sp"
		            android:gravity="center"
		            android:textColor="@color/black"/>
		    </RelativeLayout>

		    <Button
		        android:id="@+id/room_service"
		        android:layout_width="match_parent"
		    	android:layout_height="match_parent"
		    	android:layout_margin="15dp"
		    	android:background="#00000000"
		        android:layout_weight="11"
		        android:onClick="onRoomServiceClick"
		        android:textSize="40sp"
		        android:textColor="@color/black"
		        android:text="房间服务"/>
		    <Button
		        android:id="@+id/elder_service"
		        android:layout_width="match_parent"
		    	android:layout_height="match_parent"
		    	android:layout_margin="15dp"
		    	android:layout_weight="11"
		    	android:onClick="onElderServiceClick"
		    	android:background="#00000000"
		    	android:textSize="40sp"
		        android:textColor="@color/black"
		        android:text="老人服务"/>
		    <Button
		        android:id="@+id/carer_settings"
		        android:layout_width="match_parent"
		    	android:layout_height="match_parent"
		    	android:layout_margin="15dp"
		    	android:layout_weight="11"
		    	android:onClick="onCarerServiceClick"
		    	android:background="#00000000"
		    	android:gravity="center"
		    	android:textSize="40sp"
		        android:textColor="@color/black"
		        android:text="设定"/>
		    <TextView 
		        android:id="@+id/room_number"
		        android:layout_width="match_parent"
		    	android:layout_height="match_parent"
		    	android:gravity="center"
		    	android:layout_weight="11"
		    	android:textSize="30sp"
		    	android:textColor="@color/orange"
		    	/>
		</LinearLayout>
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    android:orientation="vertical"
		    android:background="@color/background" >
		    
		    <!-- here may add a network prompt -->
		    <RelativeLayout
		        android:id="@+id/network_prompt_container"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        
		        />
		        
		    <RelativeLayout
		        android:id="@+id/main_fragment"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent">
		        
		    </RelativeLayout>
		    
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>