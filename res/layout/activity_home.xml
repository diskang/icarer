<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sjtu.icarer.Homectivity">
    
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/toolbar_top_padding"
        app:theme="@style/ToolbarStyle"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:id="@+id/toolbar" />

        
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/toolbar"
        android:background="@color/nav_background"
        android:id="@+id/ll_navbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="10" >

            <ImageView
                android:id="@+id/carer_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_alignParentLeft="true"
                android:maxHeight="160dp"
                android:maxWidth="120dp"
                android:minHeight="160dp"
                android:minWidth="120dp"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                android:src="@drawable/default_carer"
                android:background="@drawable/border_photo"/>

            <TextView
                android:id="@+id/carer_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="3dp"
                android:layout_toRightOf="@id/carer_pic"
                android:textSize="25sp"
                android:gravity="center"
                android:textColor="@color/black"/>
        </RelativeLayout>
		<View style="@style/Separator" />
        <Button
            android:id="@+id/room_service"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:background="@drawable/section_selector"
            android:layout_weight="11"
            android:onClick="onRoomServiceClick"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:text="房间服务"/>
        <View style="@style/Separator" />
        <Button
            android:id="@+id/elder_service"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="11"
            android:onClick="onElderServiceClick"
            android:background="@drawable/tab_selector_left"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:text="老人服务"/>
        <View style="@style/Separator" />
        <Button
            android:id="@+id/carer_settings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="11"
            android:onClick="onCarerServiceClick"
            android:background="@drawable/tab_selector_left_right"
            android:gravity="center"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:text="设定"/>
        <View style="@style/Separator" />
        <TextView 
            android:id="@+id/room_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="11"
            android:textSize="30sp"
            android:textColor="@color/orange"
            android:background="@drawable/tab_selector_left_right"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/ll_navbar"
        android:layout_below="@id/toolbar"
        android:orientation="vertical"
        android:background="@color/background" >
        
        <!-- here may add a network prompt -->
        <RelativeLayout
            android:id="@+id/network_prompt_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
            
        <RelativeLayout
            android:id="@+id/main_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
        </RelativeLayout>
        
    </LinearLayout>
</RelativeLayout>
